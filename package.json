{
  "name": "procure-sales-asset-manager",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "dev": "NODE_ENV=development remix vite:dev",
    "dev:test": "NODE_ENV=test remix vite:dev",
    "dev:prod": "NODE_ENV=production remix vite:dev",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "start": "remix-serve ./build/server/index.js",
    "start:prod": "NODE_ENV=production remix-serve ./build/server/index.js",
    "typecheck": "tsc",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:push:test": "NODE_ENV=test prisma db push",
    "db:push:prod": "NODE_ENV=production prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:test": "NODE_ENV=test prisma migrate dev",
    "db:migrate:prod": "NODE_ENV=production prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "tsx scripts/seed.ts",
    "db:seed:test": "NODE_ENV=test tsx scripts/seed.ts",
    "setup": "chmod +x scripts/setup.sh && ./scripts/setup.sh",
    "postinstall": "npm run db:generate"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-navigation-menu": "^1.1.4",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-radio-group": "^1.1.3",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-toggle": "^1.0.3",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@remix-run/node": "^2.4.1",
    "@remix-run/react": "^2.4.1",
    "@remix-run/serve": "^2.4.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "isbot": "^4",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix": "^2.4.1",
    "tailwind-merge": "^2.2.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.4.1",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "postcss": "^8.4.32",
    "prisma": "^5.7.1",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
